<div class="row">
	<h3 class="page-header pull-right">Register a new device</h3>
</div>
Register
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/devices/register" id="deviceform">
	<div class="form-group">
		<label>Name</label>
		<input type="text" class="form-control" placeholder="Name this device" name="name" required>
	</div>
	<div class="form-horizontal">
		<label>Description</label>
		<div class="form-group">
			
			<div class="col-md-12">
				<textarea name="description" form="deviceform" class="form-control" rows="3" placeholder="Descripe your device, where is it, what does it control.  Is it dangerous?" required></textarea>
			</div>
		</div>
	</div>
	<div class="form-group">
		<label>url</label>
		<input type="text" class="form-control" placeholder="http://192.168.1.101:1234" name="url" required>
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>